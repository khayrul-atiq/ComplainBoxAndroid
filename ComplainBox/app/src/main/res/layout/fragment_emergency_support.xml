<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.olife.complainbox.EmergencySupport">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:autoStart="true"
                android:clickable="true"
                android:flipInterval="2000"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images4" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images5" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images6" />

            </ViewFlipper>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:weightSum="2"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:id="@+id/emergency_support_999"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_999"
                            android:tint="#ffffff"
                            app:cb_color="#F44336"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="999"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:id="@+id/emergency_support_hospital"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_local_hospital_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#4CAF50"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Hospital"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:weightSum="2"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:id="@+id/emergency_support_police_station"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_policeman_male"
                            android:tint="#ffffff"
                            app:cb_color="#FF9800"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Police Station"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:id="@+id/emergency_support_fire_station"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_whatshot_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#03A9F4"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Fire Station"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>

            </TableLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
