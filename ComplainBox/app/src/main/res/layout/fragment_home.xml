<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context="com.example.olife.complainbox.Home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:autoStart="true"
                android:clickable="true"
                android:flipInterval="2000"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <ImageView
                    android:id="@+id/home_imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images1" />

                <ImageView
                    android:id="@+id/home_imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images2" />

                <ImageView
                    android:id="@+id/home_imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images3" />

                <ImageView
                    android:id="@+id/home_imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images4" />

                <ImageView
                    android:id="@+id/home_imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images5" />

                <ImageView
                    android:id="@+id/home_imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images6" />

            </ViewFlipper>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_vertical_margin"
                >


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="2"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:id="@+id/home_bt_problem_submission"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_report_problem_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#F44336"
                            app:cb_pressedRingWidth="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Problem Submission"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:id="@+id/home_bt_emergency_support"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_live_help_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#4CAF50"
                            app:cb_pressedRingWidth="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Emergency Support"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:id="@+id/home_bt_event"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_event_note_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#FF9800"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Event"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:id="@+id/home_bt_notice"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_description_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#03A9F4"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Notice"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:id="@+id/home_bt_application_form"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_assignment_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#673AB7"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Application Forms"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:id="@+id/home_bt_my_profile"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_person_black_24dp"
                            android:tint="#ffffff"
                            app:cb_color="#607D8B"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="My Profile"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>






            </TableLayout>












        </LinearLayout>
    </ScrollView>
</RelativeLayout>
