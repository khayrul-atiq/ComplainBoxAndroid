<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.olife.complainbox.ProblemSubmission">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:autoStart="true"
                android:clickable="true"
                android:flipInterval="2000"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images4" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images5" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/images6" />

            </ViewFlipper>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_vertical_margin"
                >


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="2"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_999"
                            android:tint="#ffffff"
                            app:cb_color="#F44336"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Road Damage"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_westage"
                            android:tint="#ffffff"
                            app:cb_color="#4CAF50"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Garbage"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_index"
                            android:tint="#ffffff"
                            app:cb_color="#FF9800"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Footpath"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_b_icon_ps_drainage"
                            android:tint="#ffffff"
                            app:cb_color="#03A9F4"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Drainage"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_roadlight"
                            android:tint="#ffffff"
                            app:cb_color="#FF9800"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Road Light"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_b_icon_ps_mosquito"
                            android:tint="#ffffff"
                            app:cb_color="#03A9F4"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Mosquito"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_b_icon_ps_noparking"
                            android:tint="#ffffff"
                            app:cb_color="#FF9800"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Illegal Parking"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_corruption"
                            android:tint="#ffffff"
                            app:cb_color="#03A9F4"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Corruption"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>


                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_repair"
                            android:tint="#ffffff"
                            app:cb_color="#FF9800"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Repair"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <at.markushi.ui.CircleButton
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/ic_other"
                            android:tint="#ffffff"
                            app:cb_color="#03A9F4"
                            app:cb_pressedRingWidth="8dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:text="Others"
                            android:textSize="16sp" />
                    </LinearLayout>


                </TableRow>


            </TableLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
